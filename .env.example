# MongoDB Configuration (REQUIRED)
MONGODB_URL=mongodb://username:password@localhost:27017/database_name

# AWS Configuration (optional - only if not using IAM role)
AWS_REGION=ap-south-1
AWS_ACCESS_KEY_ID=your_access_key_id
AWS_SECRET_ACCESS_KEY=your_secret_access_key

# Server Configuration
NODE_ENV=staging
B2B_PORT=5001

# AWS SNS Configuration (for SMS/OTP)
AWS_ENTITY_ID=your_entity_id
AWS_TEMPLATE_ID=your_template_id
FORGOT_PASS_SMS_AWS_TEMPLATE_ID=your_forgot_pass_template_id
FOGORT_PASSWORD_OTP_TEMPLATE_ID=your_otp_template_id
B2B_OTP_TEMPLATE_ID=your_b2b_otp_template_id

# Razorpay Configuration (for payments)
RAZORPAY_APT_SECRET=your_razorpay_secret

# Add other required environment variables as needed
